!!! 5
html
  head
    meta(charset="utf-8")
    title Groundwork Tests: Typography
    link(rel="stylesheet", href="../css/tests/test-typography.css")
  
    style div > div > div {background-color: rgba(0,0,0,0.1); border: 1px dashed white;}
  
  body
    .container
      .padded.align-center
        h1 Groundwork Test: Typography
        p This page generates typography elements using tags, classes and extends. Things are good when:
        ul.list
          li Elements appear as they should regardless of whether tags, classes or extends are used.

      .row.headings(style="text-align: center; background-color: #444; color: white;")
        .one.third
          h2 Tags
          p foo
        .one.third
          h2 Classes
          p .foo
        .one.third
          h2 Placeholders
          p @extend %foo;
      
      - var elements = ["h1", "h2", "h3", "h4", "h5", "h6", "p", "sup", "sub", "small", "big", "em", "b", "blockquote", "code", "pre"]

      each element in elements
        .row
          .one.third: #{element}
            | #{element}
          .one.third: div(class="#{element}")
            | .#{element}
          .one.third: div(class="extend-#{element}")
            | .extend-#{element}

      - var structures = ["ul", "ol", "dl", "pre", "blockquote"]

      each structure in structures

        case structure
          when "ul"
            - var text = ["List item"]
            - var elements = ["li"]
          when "ol"
            - var text = ["List item"]
            - var elements = ["li"]
          when "dl"
            - var text = ["Something", "definition of something"]
            - var elements = ["dt", "dd"]
          when "pre"
            - var text = ["Formatted code sample"]
            - var elements = ["code"]
          when "blockquote"
            - var text = ["Example quotation", "Author"]
            - var elements = ["span", "cite"]

        #{structure}
          each element, i in elements
              #{element} #{text[i]}
